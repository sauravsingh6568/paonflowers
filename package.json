{
  "name": "paonflowers-server",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently -k -n server,client -c auto \"nodemon server/server.js\" \"npm run dev --prefix client\"",
    "start": "node server/server.js",
    "build:client": "npm run build --prefix client",
    "preview:client": "npm run preview --prefix client"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.1",
    "firebase-admin": "^13.5.0",
    "helmet": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.17.2",
    "morgan": "^1.10.1",
    "multer": "^1.4.5-lts.1",
    "nanoid": "^5.0.7",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "nodemon": "^3.1.10"
  }
}
